<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .attendance-form, .marks-form {
            display: none;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>Teacher Dashboard - EXTC Fourth Year</h2>
        <div class="row">
            <div class="col-md-12">
                <h3>Students List</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Roll No</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each students}}
                        <tr>
                            <td>{{rollNo}}</td>
                            <td>{{name}}</td>
                            <td>
                                <button class="btn btn-primary btn-sm" onclick="showAttendanceForm('{{_id}}')">Add Attendance</button>
                                <button class="btn btn-success btn-sm" onclick="showMarksForm('{{_id}}')">Add Marks</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Attendance Form -->
        <div id="attendanceForm" class="attendance-form">
            <h3>Add Attendance</h3>
            <form id="attendanceFormData">
                <input type="hidden" id="studentId" name="studentId">
                <input type="hidden" id="studentDivision" name="division">
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <select class="form-select" id="subject" name="subject" required>
                        <option value="Wireless Networks">Wireless Networks</option>
                        <option value="Lens">Lens</option>
                        <option value="OC">OC</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="month" class="form-label">Month</label>
                    <select class="form-select" id="month" name="month" required>
                        <option value="January">January</option>
                        <option value="February">February</option>
                        <option value="March">March</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status" required>
                        <option value="Present">Present</option>
                        <option value="Absent">Absent</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit Attendance</button>
            </form>
        </div>

        <!-- Marks Form -->
        <div id="marksForm" class="marks-form">
            <h3>Add Marks</h3>
            <form id="marksFormData">
                <input type="hidden" id="marksStudentId" name="studentId">
                <input type="hidden" id="marksStudentDivision" name="division">
                <div class="mb-3">
                    <label for="marksSubject" class="form-label">Subject</label>
                    <select class="form-select" id="marksSubject" name="subject" required>
                        <option value="Wireless Networks">Wireless Networks</option>
                        <option value="Lens">Lens</option>
                        <option value="OC">OC</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="termTest1" class="form-label">Term Test 1 (20)</label>
                    <input type="number" class="form-control" id="termTest1" name="termTest1" min="0" max="20" required>
                </div>
                <div class="mb-3">
                    <label for="termTest2" class="form-label">Term Test 2 (20)</label>
                    <input type="number" class="form-control" id="termTest2" name="termTest2" min="0" max="20" required>
                </div>
                <div class="mb-3">
                    <label for="endSem" class="form-label">End Semester (60)</label>
                    <input type="number" class="form-control" id="endSem" name="endSem" min="0" max="60" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit Marks</button>
            </form>
        </div>
    </div>

    <script>
        // Store studentId to division mapping
        const studentDivisions = {};
        {{#each students}}
        studentDivisions['{{_id}}'] = '{{division}}';
        {{/each}}

        function showAttendanceForm(studentId) {
            document.getElementById('studentId').value = studentId;
            document.getElementById('studentDivision').value = studentDivisions[studentId];
            document.getElementById('attendanceForm').style.display = 'block';
            document.getElementById('marksForm').style.display = 'none';
        }

        function showMarksForm(studentId) {
            document.getElementById('marksStudentId').value = studentId;
            document.getElementById('marksStudentDivision').value = studentDivisions[studentId];
            document.getElementById('marksForm').style.display = 'block';
            document.getElementById('attendanceForm').style.display = 'none';
        }

        document.getElementById('attendanceFormData').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch('/teacher/attendance', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Attendance added successfully');
                    e.target.reset();
                } else {
                    alert('Error adding attendance');
                }
            } catch (error) {
                alert('Error adding attendance');
            }
        });

        document.getElementById('marksFormData').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch('/teacher/marks', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Marks added successfully');
                    e.target.reset();
                } else {
                    alert('Error adding marks');
                }
            } catch (error) {
                alert('Error adding marks');
            }
        });
    </script>
</body>
</html> 