<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Student Profile</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Student Information</h4>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> {{student.name}}</p>
                        <p><strong>Branch:</strong> {{student.department}}</p>
                        <p><strong>Year:</strong> {{student.year}}</p>
                    </div>
                </div>
            </div>
        </div>

        {{#if canMarkAttendance}}
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card p-3 mb-3 bg-light border-primary">
                    <h5>Mark Attendance (Jan-Mar)</h5>
                    <form method="POST" action="/teacher/mark-attendance" class="row g-2 align-items-end">
                        <input type="hidden" name="studentId" value="{{student._id}}">
                        <div class="col-auto">
                            <label class="form-label">Date:</label>
                            <input type="date" name="date" min="{{janStart}}" max="{{marEnd}}" class="form-control" required>
                        </div>
                        <div class="col-auto">
                            <label class="form-label">Status:</label>
                            <select name="status" class="form-select" required>
                                <option value="Present">Present</option>
                                <option value="Absent">Absent</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Mark Attendance</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{/if}}

        <div class="row mt-4">
            <div class="col-md-12">
                <h3>Attendance Records</h3>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>Subject</th>
                                <th>Month</th>
                                <th>Total Classes</th>
                                <th>Present Classes</th>
                                <th>Attendance %</th>
                                {{#if isAdmin}}
                                <th>Actions</th>
                                {{/if}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#if attendance.length}}
                            {{#each attendance}}
                            <tr>
                                <td>{{subject}}</td>
                                <td>{{month}}</td>
                                <td>{{totalClasses}}</td>
                                <td>{{presentClasses}}</td>
                                <td>{{percentage}}%</td>
                                {{#if ../isAdmin}}
                                <td>
                                    <form method="POST" action="/edit-attendance" style="display:inline;">
                                        <input type="hidden" name="attendanceId" value="{{_id}}">
                                        <select name="status" class="form-select form-select-sm d-inline w-auto">
                                            <option value="Present" {{#ifCond status '==' 'Present'}}selected{{/ifCond}}>Present</option>
                                            <option value="Absent" {{#ifCond status '==' 'Absent'}}selected{{/ifCond}}>Absent</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-warning">Update</button>
                                    </form>
                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr><td colspan="6" class="text-center text-muted">No attendance records yet.</td></tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <h3>Academic Performance</h3>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>Subject</th>
                                <th>Term Test 1 (20)</th>
                                <th>Term Test 2 (20)</th>
                                <th>End Semester (60)</th>
                                <th>Total (100)</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if marks.length}}
                            {{#each marks}}
                            <tr>
                                <td>{{subject}}</td>
                                <td>{{termTest1}}</td>
                                <td>{{termTest2}}</td>
                                <td>{{endSem}}</td>
                                <td>{{total}}</td>
                                <td>{{grade}}</td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr><td colspan="6" class="text-center text-muted">No marks entered yet.</td></tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {{#if isTeacher}}
        <div class="row mt-4">
            <div class="col-md-12">
                <h4>Enter TT1/TT2 Marks (out of 25)</h4>
                <form method="POST" action="/teacher/enter-marks">
                    <input type="hidden" name="studentId" value="{{student._id}}">
                    <div class="mb-2">
                        <label>TT1:</label>
                        <input type="number" name="tt1" min="0" max="25" required>
                    </div>
                    <div class="mb-2">
                        <label>TT2:</label>
                        <input type="number" name="tt2" min="0" max="25" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Enter Marks</button>
                </form>
            </div>
        </div>
        {{/if}}
    </div>
</body>
</html> 